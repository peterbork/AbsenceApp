<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AbsenceApp.Pages.HistoryPage">
	<ContentPage.Content>
        <StackLayout Padding="20" Spacing="10" Margin="0, 10, 0, 0" BackgroundColor="#f1f1f1">

            <Picker Title="Select month" x:Name="MonthPicker" HorizontalOptions="FillAndExpand"></Picker>

            <ListView x:Name="AbsenceListView" Margin="0, 10, 0, 0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Date}" Detail="{Binding MissingHours}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
