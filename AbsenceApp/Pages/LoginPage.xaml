<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AbsenceApp.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout 
            VerticalOptions="Center" 
            Padding="20, 30, 20, 20" 
            Spacing="10"
        >

            <Label 
                Text="AbsenceApp" 
                FontSize="40"
                Margin="0, 0, 0, 40"
                HorizontalOptions="Center"
            />
            
            <Label Text="Username" FontSize="Default" />
            <Entry x:Name="UsernameInput"  Keyboard="Chat" />
            
            <Label Text="Password" FontSize="Default" />
            <Entry x:Name="PasswordInput" IsPassword="true" />

            <Label 
                x:Name="errorLabel" 
                IsVisible="false" 
                Text="Forkerte oplysninger" 
                TextColor="Red" 
                XAlign="Center"
            />

            <Button
                Text="Login"
                VerticalOptions="Center"
                Clicked="SubmitLogin"
                BackgroundColor="#006E79"
                TextColor="White"
                FontAttributes="Bold"
                Margin="0,10,0,0"
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>