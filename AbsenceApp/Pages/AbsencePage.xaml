<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AbsenceApp.Pages.AbsencePage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#f1f1f1" Padding="20" Spacing="10">
            
            <Label Text="From" FontSize="Default"></Label>
            <DatePicker x:Name="FromDate"/>
            <TimePicker x:Name="FromTime"/>
            
            <Label Text="To" FontSize="Default"></Label>
            <DatePicker x:Name="ToDate"/>
            <TimePicker x:Name="ToTime"/>
            
            <Label Text="Reason"/>
            <Editor HeightRequest="100" x:Name="Reason" />

            <Button Text="SUBMIT ABSENCE" Clicked="SubmitAbsence"
                    BackgroundColor="#006E79"
                    TextColor="White"
                    FontAttributes="Bold"
                    Margin="0,10,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
